<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('./partials/head.ejs') %>
  </head>
  <body>
    <%- include ('./partials/headers.ejs') %>
    <div class="container">
      <a href="/item/new"><button>New Item</button></a>
      <ul>
        <% for (let item of items) {%>

        <li><%=item.name%></li>
        <li>Damage: <%=item.damage%></li>
        <li>Cost: <%=item.cost%></li>

        <img src="<%=item.img%>" />
        <a href="/item/<%=item._id%>">View Item</a>
        <% } %>
      </ul>
      <%- include ('./partials/footer.ejs') %>
    </div>
  </body>
</html>
